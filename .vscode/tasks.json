{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "0.1.0",
  "command": "npm",
  "isShellCommand": true,
  "showOutput": "always",
  "suppressTaskName": true,
  "tasks": [
    {
      "taskName": "test",
      "isTestCommand": true,
      "args": ["run", "test"],
      "problemMatcher": ["$tsc"]
    },
    {
      "taskName": "install",
      "args": ["install"]
    },
    {
      "taskName": "build",
      "isBuildCommand": true,
      "args": ["run", "build"],
      "problemMatcher": ["$tsc"]
    }
  ]
}